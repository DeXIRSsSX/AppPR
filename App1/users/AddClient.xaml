<Page x:Class="App1.users.AddClient"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:App1.users"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddClient">

    <Grid>
        <StackPanel 
            HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Введиете фамилию:" VerticalAlignment="Center" Width="120"/>
                <TextBox x:Name="TbxSurname"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Введиете имя:" VerticalAlignment="Center" Width="120"/>
                <TextBox  x:Name="TbxName"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Введиете отчество:" VerticalAlignment="Center" Width="120"/>
                <TextBox x:Name="TbxFname"/>
            </StackPanel>
            <StackPanel Orientation="Vertical">
                <Button Content="Создать" Name="createClient" Click="createClient_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
